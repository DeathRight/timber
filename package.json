{
  "name": "timber",
  "version": "0.0.1",
  "description": "Fastify+GraphQL backend for TavernChat",
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --transpile-only --no-notify src/server.ts",
    "build": "tsc",
    "generate": "ts-node --transpile-only src/schema",
    "test": "npm run generate && jest"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeathRight/timber.git"
  },
  "keywords": [
    "Fastify",
    "FastifyJS",
    "GraphQL",
    "PostgreSQL",
    "MongoDB"
  ],
  "author": "Travis Baldwin",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/DeathRight/timber/issues"
  },
  "homepage": "https://github.com/DeathRight/timber#readme",
  "dependencies": {
    "dotenv": "^16.0.0",
    "fastify": "^3.27.2",
    "fastify-auth": "^1.1.0",
    "fastify-cli": "^2.15.0",
    "fastify-mongodb": "^4.1.1",
    "fastify-postgres": "^3.6.0",
    "fastify-redis": "^4.3.3",
    "fastify-sensible": "^3.1.2",
    "fastify-websocket": "^4.0.0",
    "firebase-admin": "^10.0.2",
    "graphql": "16.3.0",
    "mercurius": "^9.3.3",
    "mongodb": "^4.4.0",
    "nexus": "^1.2.0",
    "pg": "^8.7.3",
    "simpleflakes": "^2.2.2"
  },
  "devDependencies": {
    "@types/ioredis": "^4.28.8",
    "@types/node": "^17.0.18",
    "@types/pg": "^8.6.4",
    "@types/ws": "^8.2.3",
    "typescript": "^4.5.5"
  }
}
